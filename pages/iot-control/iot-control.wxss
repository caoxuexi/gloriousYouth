page{
    box-sizing: border-box;
    padding: 30rpx;
}

.top{
    height:200rpx;
    width:690rpx;
}

.next2{
    display:flex;
    flex-direction:column;
    align-items: center;
    width: 100%;
    box-sizing: border-box;
    padding:40rpx 0 0 0;
    background-color: #ffffff;
    box-shadow:0px 4px 10px 0px rgba(9,36,66,0.04);
}

.sub-container{
    display:flex;
    flex-direction:column;
    align-items: flex-start;
}

.next-inner{
    display:flex;
    flex-direction:row;
    align-items: center;
    position: relative;
    margin-bottom: 46rpx;
}

.next-inner text{
    font-size:32rpx;
    z-index: 99;
}

.next-inner text:first-child{
    font-weight: 500;
}

.next-inner text:last-child{
    color:#157658;
    margin-left: 40rpx;
    font-size:28rpx;
}

.block{
    width:64rpx;
    height:20rpx;
    background-color: #DCEBE6;
    position: absolute;
    /*left:-60rpx;*/
    top:25rpx;
    /*opacity: 0.8;*/
}

.divide-line{
    width: 100%;
    height: 1rpx;
    background-color: grey;
    opacity: 0.2;

}

.monitor-button{
    margin: 10rpx 0 20rpx 0;
}
