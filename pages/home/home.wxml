<!--pages/home/home.wxml-->
<l-loadmore show type="{{loadingType}}"
            endText="<-CaoStudy 作品->">
    <view slot="content" class="container">
        <image class="top-theme" src="{{themeA.entrance_img}}"></image>
        <swiper class="swiper" indicator-dots="true" indicator-active-color="#157658"
                autoplay="true" circular="true">
            <block wx:for="{{bannerB.items}}" wx:key="index">
                <swiper-item>
                    <!--这里面item固定就指代了子项-->
                    <image class="swiper" src="{{item.img}}"></image>
                </swiper-item>
            </block>
        </swiper>
        <s-category-grid grid="{{grid}}">
        </s-category-grid>
        <image data-aname="a-2" class="activity" bind:tap="onGoToCoupons" src="{{activityD.entrance_img}}"></image>
        <s-spu-scroll
                theme="{{themeE}}"
                spu-list="{{themeESpu}}"
                wx:if="{{themeE.online}}">
        </s-spu-scroll>
        <image class="quality" src="{{themeF.entrance_img}}"></image>
        <s-hot-list banner="{{bannerG}}"></s-hot-list>
        <image src="{{themeH.entrance_img}}" class="fashion"></image>
        <view class="spu-bottom">
            <image class="title-spu-bottom" src="/imgs/home/title@interest.png"></image>
            <l-water-flow generic:l-water-flow-item="s-spu-preview"></l-water-flow>
        </view>
    </view>
</l-loadmore>

